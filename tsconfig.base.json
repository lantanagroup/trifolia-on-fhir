{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2015",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@trifolia-fhir/models": ["./libs/tof-lib/src/lib/models/index.ts"],
      "@trifolia-fhir/r4": ["./libs/tof-lib/src/lib/r4/index.ts"],
      "@trifolia-fhir/r5": ["./libs/tof-lib/src/lib/r5/index.ts"],
      "@trifolia-fhir/stu3": ["./libs/tof-lib/src/lib/stu3/index.ts"],
      "@trifolia-fhir/tof-lib/*": ["./libs/tof-lib/src/lib/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "."
  },
  "exclude": ["node_modules", "tmp"]
}
